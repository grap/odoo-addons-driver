<odoo>

    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='pos_iface_customer_facing_display_via_proxy']/.."
                position="before"
            >
                <div class="row">
                    <label
                        string="Payment Terminal"
                        for="pos_iface_payment_terminal"
                        class="col-lg-4 o_light_label"
                    />
                    <field name="pos_iface_payment_terminal" />
                </div>
            </xpath>
        </field>
    </record>

</odoo>
